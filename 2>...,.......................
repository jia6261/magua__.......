import turtle

# 设置窗口
screen = turtle.Screen()
screen.bgcolor("white")
screen.title("祝福语")

# 创建海龟
t = turtle.Turtle()
t.hideturtle()
t.penup()
t.goto(-300, 100)  # 进一步调整位置，靠左上角，避免穿出窗口
t.pendown()

# 设置字体（需要系统支持中文字体）
font = ("SimHei", 10)  # 黑体，10号

# 写文字
t.write("麻瓜第一次谈自己的病那期视频，还想着一定肯定会好起来的，希望天堂没有病痛，麻瓜在那边开心吧", font=font, align="left")

# 保持窗口打开
turtle.done()

# 交互循环（在关闭 Turtle 窗口后执行）
